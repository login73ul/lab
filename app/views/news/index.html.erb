<h1>Listing news</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Article</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.title %></td>
    <td><%= news.author %></td>
    <td><%= news.article %></td>
    <td><%= news.state %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

